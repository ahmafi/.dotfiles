// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
	"icon_theme": "Catppuccin Macchiato",
	"disable_ai": true,
	"git": {
		"inline_blame": {
			"enabled": false,
			"delay_ms": 0,
			"padding": 7,
			"min_column": 0,
			"show_commit_summary": false
		}
	},
	"buffer_font_features": {
		"calt": 0
	},
	"telemetry": {
		"diagnostics": false,
		"metrics": false
	},
	"vim_mode": true,
	"ui_font_size": 18.0,
	"buffer_font_size": 20.0,
	"theme": {
		"mode": "system",
		"light": "Catppuccin Latte - No Italics",
		"dark": "Catppuccin Macchiato - No Italics"
	},
	"languages": {
		"JavaScript": {
			"formatter": { "language_server": { "name": "biome" } },
			"code_actions_on_format": {
				// "source.fixAll.biome": true,
				"source.organizeImports.biome": true
			}
		},
		"TypeScript": {
			"formatter": { "language_server": { "name": "biome" } },
			"code_actions_on_format": {
				// "source.fixAll.biome": true,
				"source.organizeImports.biome": true
			}
		},
		"TSX": {
			"formatter": { "language_server": { "name": "biome" } },
			"code_actions_on_format": {
				// "source.fixAll.biome": true,
				"source.organizeImports.biome": true
			}
		},
		"JSON": { "formatter": { "language_server": { "name": "biome" } } },
		"JSONC": { "formatter": { "language_server": { "name": "biome" } } },
		"CSS": { "formatter": { "language_server": { "name": "biome" } } },
		"GraphQL": { "formatter": { "language_server": { "name": "biome" } } }
	},
	"lsp": {
		"biome": {
			"settings": {
				"require_config_file": true
			}
		}
	},
	"auto_install_extensions": {
	  "html": true,
		"biome": true,
		"groovy": true,
		"catppuccin": true,
		"catppuccin-icons": true
	},
	"tab_bar": {
	  "show": false
	},
	"title_bar": {
	  "show_sign_in": false
	},
	"project_panel": {
	  "button": true
	},
	"use_smartcase_search": true,
	"use_system_path_prompts": false,
	"use_system_prompts": false
}
